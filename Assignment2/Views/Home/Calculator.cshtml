@{
    ViewData["Title"] = "Calculator Page";
}
<div class="container-fluid bg-light form-cotainer">
    <div class="text-center">
        <h3 class="font-italic cal_text">Calculator</h3>



    </div>

    <form>
        <div class="form-group row">
            <label for="value1" class="col-sm-2 col-form-label">value1</label>
            <div class="col-sm-10">
                <input class="form-control" id="value1">
            </div>
        </div>

        <div class="form-group row">
            <label for="value2" class="col-sm-2 col-form-label">value2</label>
            <div class="col-sm-10">
                <input class="form-control" id="value2">
            </div>
        </div>

        <div class="form-group row">
            <label for="output" class="col-sm-2 col-form-label">Output</label>
            <div class="col-sm-10">
                <input class="form-control" id="output" value=" ">
            </div>
        </div>

        <div class="form-row">
            <div class="col">
                <button type="button" class="btn btn-outline-info" id="plus" onclick="add()">+</button>

            </div>
            <div class="col">
                <button type="button" class="btn btn-outline-info" id="minus " onclick="minus()">-</button>
            </div>

            <div class="col">
                <button type="button" class="btn btn-outline-info" id="multiplication" onclick="multiplication()">*</button>

            </div>
            <div class="col">
                <button type="button" class="btn btn-outline-info" id="division" onclick="division()">/</button>
            </div>

            <div class="col">
                <button type="button" class="btn btn-outline-info" id="mod" onclick="mod()">%</button>
            </div>
        </div>

    </form>
</div>
